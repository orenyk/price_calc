= simple_form_for(@component) do |f|
  = f.error_notification

  .form-inputs
    = f.association :component_type, input_html: { class: 'form-control' }
    = f.input :name, input_html: { class: 'form-control' }
    = f.input :cost, input_html: { class: 'form-control' }
    br

  .form-actions
    => f.button :submit, class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn btn-danger'