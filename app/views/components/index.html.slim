.page-header
  h1 All Components

.table-responsive.text-center
  table.table.table-striped.table-bordered.table-hover
    thead
      tr
        th Name
        th Cost
        th Type
        th
        th
        th
    tbody
    - @components.each do |component|
      tr
        td = component.name
        td = local_currency(component.cost)
        td = link_to("#{component.component_type.name}", edit_component_type_path(component.component_type))
        td = link_to 'Show', component, class: 'btn btn-default'
        td = link_to 'Edit', edit_component_path(component), class: 'btn btn-primary'
        td = link_to 'Destroy', component, data: {:confirm => 'Are you sure?'}, :method => :delete, class: 'btn btn-danger'
br
= link_to 'New Component', new_component_path, class: 'btn btn-primary'